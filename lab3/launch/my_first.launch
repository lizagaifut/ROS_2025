<launch>
    <!-- Главный launch-файл - УПРОЩЕННАЯ ВЕРСИЯ -->
    <arg name="custom_topic_name" default="new_topic" />
    <arg name="namespace" default="new_ns" />
    
    <group ns="$(arg namespace)">
        <!-- Только основные узлы для теста -->
        <node name="receiver" pkg="rospy_tutorials" type="listener.py" output="screen">
            <remap from="chatter" to="$(arg custom_topic_name)"/>
        </node>
        <node name="sender" pkg="rospy_tutorials" type="talker.py" output="screen">
            <remap from="chatter" to="$(arg custom_topic_name)"/>
        </node>
    </group>
</launch>
