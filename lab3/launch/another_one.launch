<launch>
    <!-- Включенный launch-файл - УПРОЩЕННАЯ ВЕРСИЯ -->
    <arg name="topic_name" default="default_topic" />
    
    <!-- Узел с УНИКАЛЬНЫМ именем -->
    <node name="extra_listener" pkg="rospy_tutorials" type="listener.py" output="screen">
        <remap from="chatter" to="$(arg topic_name)"/>
    </node>
</launch>
