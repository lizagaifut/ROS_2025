<launch>
  <!-- Turtlesim Node-->
  <node pkg="turtlesim" type="turtlesim_node" name="simulator"/>

  <node pkg="turtlesim" type="turtle_teleop_key" name="keyboard" output="screen"/>
  <!-- Axes -->
  <param name="scale_linear" value="2" type="double"/>
  <param name="scale_angular" value="2" type="double"/>

  <!-- Turtle1 TF Broadcaster -->
  <node name="turtle1_tf_broadcaster" pkg="carrot" type="turtle_tf_broadcaster.py" respawn="false" output="screen" >
    <remap from="input_pose" to="turtle1/pose"/>
    <param name="turtle_tf_name" type="string" value="turtle1" />
  </node>
  
  <!-- Turtle2 TF Broadcaster -->
  <node name="turtle2_tf_broadcaster" pkg="carrot" type="turtle_tf_broadcaster.py" respawn="false" output="screen" >
    <remap from="input_pose" to="turtle2/pose"/>
    <param name="turtle_tf_name" type="string" value="turtle2" />
  </node>
  
  <!-- Static transform for carrot -->
  <node pkg="tf" type="static_transform_publisher" name="carrot_tf" 
        args="0.3 0 0 0 0 0 turtle1 carrot 100" />
        
  <!-- Turtle TF Listener (chasing carrot) -->
  <node name="turtle_tf_listener" pkg="carrot" type="turtle_tf_listener.py" respawn="false" output="screen" >
  </node>
  
</launch>
